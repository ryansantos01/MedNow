                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/tvContentEndereco"
                android:textColor="@color/black"/>

        </LinearLayout>

        //Bloco do número da residência

        <LinearLayout
