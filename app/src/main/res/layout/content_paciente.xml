            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/tvContentCidade"
                android:textColor="@color/black"/>
        </LinearLayout>

        //Bloco do estado

        <LinearLayout
            android:layout_width="match_parent"
